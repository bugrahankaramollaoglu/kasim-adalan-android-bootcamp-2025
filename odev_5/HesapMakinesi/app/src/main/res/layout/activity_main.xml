<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hesapmakinesiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/oswald_semibold"
        android:text="HESAP MAKİNESİ"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/hesapmakinesiText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/result_box"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0.0"

        android:textColor="@color/black"
        android:textSize="24sp" />

    <GridLayout
        android:id="@+id/numpad"
        android:layout_width="270dp"
        android:layout_height="350dp"
        android:layout_below="@id/resultText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:columnCount="3"
        android:rowCount="4">


        <!-- Row 2 -->
        <Button
            android:id="@+id/seven_button"
            style="@style/CalcButton"
            android:text="7" />

        <Button
            android:id="@+id/eight_button"
            style="@style/CalcButton"
            android:text="8" />

        <Button
            android:id="@+id/nine_button"
            style="@style/CalcButton"
            android:text="9" />

        <Button
            android:id="@+id/four_button"
            style="@style/CalcButton"
            android:text="4" />

        <Button
            android:id="@+id/five_button"
            style="@style/CalcButton"
            android:text="5" />

        <Button
            android:id="@+id/six_button"
            style="@style/CalcButton"
            android:text="6" />

        <Button
            android:id="@+id/one_button"
            style="@style/CalcButton"
            android:text="1" />

        <Button
            android:id="@+id/two_button"
            style="@style/CalcButton"
            android:text="2" />

        <Button
            android:id="@+id/three_button"
            style="@style/CalcButton"
            android:text="3" />


        <Button
            android:id="@+id/zero_button"
            style="@style/CalcButton"
            android:text="0" />

        <Button
            android:id="@+id/plus_button"
            style="@style/CalcButton"
            android:text="+" />

        <Button
            android:id="@+id/minus_button"
            style="@style/CalcButton"
            android:text="-" />

    </GridLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/numpad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/result_clear_button"
            android:fontFamily="@font/oswald_semibold"
            android:padding="5dp"
            android:text="CLEAR"
            android:textSize="20sp" />

        <Space
            android:layout_width="40dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/resultButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/result_clear_button"
            android:fontFamily="@font/oswald_semibold"
            android:padding="5dp"
            android:text="RESULT"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>